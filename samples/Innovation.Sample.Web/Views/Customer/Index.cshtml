@using Innovation.Sample.Api.Paging
@using Innovation.Sample.Api.Customers.ViewModels
@model GenericResultsList<CustomerLite>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Items != null)
        {
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-customerId="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-customerId="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-customerId="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
